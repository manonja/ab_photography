generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String  @id @default(uuid())
  title       String  @unique
  subtitle    String?
  description String?
  isPublished Boolean @default(false)
  photos      Photo[]

  @@map("projects")
}

model Photo {
  id           String  @id @default(uuid())
  desktop_blob String
  mobile_blob  String
  gallery_blob String
  sequence     Int
  caption      String?
  projectId    String
  project      Project @relation(fields: [projectId], references: [id])

  @@index([projectId, sequence])
  @@map("photos")
}
